@*@model IEnumerable<DotNetCoreFunda.Model.Employee>;*@
@model DotNetCoreFunda.ViewModels.HomeIndexViewModel;
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <div>Task for today: @Model.TasksForToday</div>
    <ul>
        @foreach (var item in Model.Employees)
        {
            <li>
                @item.Id : @item.Name 
                : <a href="/home/details/@item.Id">Details</a>
                @Html.ActionLink("Click here", "Details", new {id=item.Id })
                <a asp-action="Details" asp-route-id="@item.Id">More</a>
            </li>
            @*<div> <a href="/home/details/@item.Id" /></div>*@
        }
    </ul>
    <a asp-action="Create">Create an employee:</a>
</body>
</html>